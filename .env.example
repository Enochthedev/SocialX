# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Default model - can be changed to any OpenRouter supported model
# Options: anthropic/claude-3.5-sonnet, openai/gpt-4-turbo, meta-llama/llama-3.1-70b, etc.
DEFAULT_LLM_MODEL=anthropic/claude-3.5-sonnet

# Twitter/X API Credentials
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=socialx
POSTGRES_USER=socialx_user
POSTGRES_PASSWORD=your_secure_password

# ChromaDB Configuration
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_COLLECTION=socialx_memories

# Agent Configuration
AGENT_USERNAME=your_twitter_username
AGENT_MODE=autonomous  # autonomous, semi-autonomous, learning-only

# Behavior Settings
ENABLE_AUTO_TWEET=true
ENABLE_AUTO_REPLY=true
ENABLE_AUTO_LIKE=true
ENABLE_AUTO_RETWEET=true
ENABLE_AUTO_FOLLOW=true
ENABLE_DM_RESPONSES=false  # Be careful with this one

# Posting Schedule
MIN_TWEET_INTERVAL_HOURS=4
MAX_TWEETS_PER_DAY=10
ACTIVE_HOURS_START=8  # 8 AM
ACTIVE_HOURS_END=23   # 11 PM
TIMEZONE=America/New_York

# Engagement Settings
REPLY_TO_MENTIONS=true
REPLY_TO_DMS=false
ENGAGE_WITH_FOLLOWERS=true
ENGAGE_WITH_TIMELINE=true
MAX_ENGAGEMENTS_PER_HOUR=15

# Learning Settings
ANALYZE_TWEET_HISTORY=true
LEARN_FROM_INTERACTIONS=true
SENTIMENT_ANALYSIS=true
TOPIC_EXTRACTION=true

# Safety Settings
ENABLE_CONTENT_FILTER=true
TOXICITY_THRESHOLD=0.7
PROFANITY_FILTER=true
POLITICAL_FILTER=false  # Set to true to avoid political topics
CONTROVERSIAL_TOPICS_FILTER=false

# Monitoring
MONITOR_KEYWORDS=ai,machine learning,technology  # Comma-separated
MONITOR_HASHTAGS=#AI,#MachineLearning
AVOID_TOPICS=politics,religion  # Topics to avoid

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_TO_FILE=true
LOG_DIR=./logs

# Redis (for caching and queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Server
BACKEND_PORT=3000
AI_ENGINE_PORT=5000

# Development
NODE_ENV=development
PYTHON_ENV=development
DEBUG=false
